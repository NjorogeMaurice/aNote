<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/bottomsheetholder"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/removePlaylist"
        android:layout_marginVertical="@dimen/sm">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_song_delete"
            android:id="@+id/deleteicon"
            android:layout_marginStart="@dimen/md" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delete playlist"
            app:layout_constraintStart_toEndOf="@+id/deleteicon"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/md"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/removePlaylist"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:id="@+id/renamingPlaylist"
        android:layout_marginVertical="@dimen/sm">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_rename"
            android:id="@+id/renameicon"
            android:layout_marginStart="@dimen/md"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rename playlist"
            app:layout_constraintStart_toEndOf="@+id/renameicon"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/md"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>